{
  "dataset": {
    "name": "CondensedMovies",
    "base_dir": "../datasets/CondensedMovies",
    "num_clips": 34000,
    "split_ratio": 0.8,
    "split_by": "movie"
  },
  "features": {
    "use_precomputed": false,
    "feature_dim": 768,
    "num_frames": 16
  },
  "training": {
    "batch_size": 32,
    "num_epochs": 15,
    "learning_rate": 0.0001,
    "optimizer": "adam",
    "mode": "binary"
  },
  "model": {
    "backbone": "MCG-NJU/videomae-base",
    "num_classes": 2,
    "freeze_backbone": false
  }
}